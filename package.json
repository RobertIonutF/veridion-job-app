{
  "name": "veridion-job-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "scrape": "tsx src/scraper/scrape.ts data/sample-websites.csv",
    "merge": "tsx src/ingest/merge.ts data/sample-websites-company-names.csv out/scraped.json",
    "index": "tsx src/search/buildIndex.ts out/profiles.json",
    "pipeline": "npm run scrape && npm run merge && npm run index",
    "start": "npm run pipeline && tsx src/api/server.ts",
    "dev": "tsx watch src/api/server.ts",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
  "@fastify/cookie": "^10.0.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/view": "^11.1.0",
    "cheerio": "^1.1.2",
    "cli-progress": "^3.12.0",
    "csv-parse": "^5.5.6",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "fastify": "^5.0.0",
    "fuse.js": "^7.0.0",
    "libphonenumber-js": "^1.11.6",
    "minisearch": "^7.1.0",
    "p-limit": "^6.1.0",
    "undici": "^6.20.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/ejs": "^3.1.5",
    "@types/node": "^22.7.5",
    "@vitest/coverage-v8": "^2.1.9",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "vitest": "^2.1.9"
  }
}
